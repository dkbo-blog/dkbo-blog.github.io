<script src="https://dkbo.github.io/npc/npc.js"></script>
<div class="col col-xs12">
  <button type="button" class="primary" onclick="toggle(this)">暫停</button>
  <input type="text" placeHolder="設定數量" onkeyup="setNum(this.value)"/>
  <canvas id="npc"></canvas>
</div>
<script>
  var a = new Dkbo({id: "npc", "NPCNum": 10, "width": 800,"height": 400});
  function toggle(btn){
    if(a.state) {
      a.stop();
      btn.innerHTML = '啟動';
    } else {
      a.start();
      btn.innerHTML = '暫停';
    }
  }
  function setNum(value){
    a.NPC = a.NPCSet(value);
 }
</script>
