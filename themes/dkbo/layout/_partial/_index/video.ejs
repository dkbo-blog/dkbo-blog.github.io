<div class="">
    <% site.tags.findOne({name: '影片'}).posts.sort('date', -1).limit(50).each(function(post){ %>
        <article class="col m4 x6 xx12 dkvideo">
            <div>
                <img src="<%- feature(post) %>" alt="" />
                <a href="<%- url_for(post.path) %>">
                    <div class="imgbox xx-p">
                        <div class="h4"><%= post.title %></div>
                        <div class="searchicon">
                            <i class="fa fa-search"></i>
                        </div>
                    </div>
                </a>
            </div>
        </article>
        <% }) %>
</div>
